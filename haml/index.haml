      - href: manage_images.html
        title: Manage
        img-src: static/focus/img/thumbs/manage.png
    - key: Projects
      links:
      - href: projects.html
        title: Summary
        img-src: static/focus/img/thumbs/summary.png
      - href: security_groups.html
        title: Security Groups
        img-src: static/focus/img/thumbs/security_groups.png
      - href: billing.html
        title: Billing
